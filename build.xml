<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project>
<target name="clean">
	<delete dir="bin"/>
	</target>
	<target name="compile">
		<mkdir dir="bin"/>
		<javac destdir="bin" srcdir="src;tests" classpath="lib\junit.jar" />
	</target>
	<target name="tests" depends="compile">
		<junit>
		<classpath>
			<pathelement location="lib\junit.jar" />
			<pathelement location="lib\org.hamcrest.core_1.3.0.v20180420-1519.jar" />
			<pathelement location="${basedir}\bin" />
		</classpath>
		<formatter type="xml"/>
		<test name="edu.ncsu.orange.OrangeTest" outfile="resultOrange"/>
		<test name="edu.ncsu.orange.PanierTest" outfile="resultPanier"/>
		</junit>
		<junitreport todir="${basedir}">
			<fileset dir="${basedir}">
				<include name="result.xml" />
			</fileset>
		</junitreport>
	</target>
</project>